acl "trusted_subnet" {
    {% for subnet in trusted_subnets %}
    {{ subnet }};
    {% endfor %}
};

options {
    directory "/var/cache/bind";
    recursion {{ recursion }};
    allow-recursion { trusted_subnet; };
    listen-on { {{ ip }}; };
    listen-on-v6 { none; };
    allow-transfer { none; };
    forwarders {
        {% for forwarder in forwarders %}
            {{ forwarder }};
        {% endfor %}
    };

    check-names master ignore;
    check-names slave ignore;
};
